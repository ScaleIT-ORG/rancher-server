version: '3'
services:
  rancher_server:
    image: rancher/server:latest
    restart: unless-stopped
    env_file: .env
    ports:
      - 8080:8080
    expose:
      - 8080
    volumes:
      - ./serverdb:/var/lib/mysql
      - ./certs/cert.crt:/var/lib/rancher/etc/ssl/ca.crt
version: '3'
services:
  rancher_server:
    image: rancher/server:latest
    restart: unless-stopped
    env_file: .env
    ports:
      - 8080:8080
    expose: 
      - 8080
    volumes: 
      - ./serverdb:/var/lib/mysql
      - ./certs/cert.crt:/var/lib/rancher/etc/ssl/ca.crt

  logstash:
    image: ludekvesely/logstash-json
    environment:
      - LOGSPOUT=ignore
      - DROP_NON_JSON=false
      - STDOUT=true
    ports:
      - 5000:5000
      - 5000:5000/udp
    links:
      - elasticsearch

  kibana:
    image: kibana
    environment:
      - LOGSPOUT=ignore
    links:
      - elasticsearch
    ports:
      - '5601:5601'

  elasticsearch:
    image: elasticsearch
    environment:
      - LOGSPOUT=ignore

networks:
  default:
    external:
      name: nginx-proxy
